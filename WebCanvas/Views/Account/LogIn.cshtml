@model PageModel

<environment names="Development">
    <link rel="stylesheet" href="~/lib/account.css" />
</environment>

<div class="account-container">
    <h2 class="form-info">Вход на сайт</h2>
    <div class="form-container">
        <form class="noField" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="form-group">
                <input placeholder="Логин" type="text" asp-for="userLogInModel.Login" />
                <span asp-validation-for="userLogInModel.Login" />
            </div>
            <div class="form-group">
                <input placeholder="Пароль" type="password" asp-for="userLogInModel.Password" />
                <span asp-validation-for="userLogInModel.Password" />
            </div>
            <input type="submit" value="Войти" class="btn blue" />
            <div class="validation" asp-validation-summary="All"></div>
        </form>
    </div>
    <a class="center" asp-action="Register">Регистрация</a>
</div>

<partial name="_ValidationScriptsPartial" />